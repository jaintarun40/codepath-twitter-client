<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.codepath.apps.twitterclient.activities.ProfileActivity">

    <LinearLayout
        android:id="@+id/llProfileBanner"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/ivProfileName"
            style="@style/RegularText"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lori Lee" />

        <TextView
            android:id="@+id/ivProfileUsername"
            style="@style/RegularText"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@teekirol" />

    </LinearLayout>
    
    <TableLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:id="@+id/tvProfileTweetCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/RegularText"
                android:text="1,000\nTWEETS" />

            <TextView
                android:id="@+id/tvProfileFollowerCount"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="400\nFOLLOWERS"/>

            <TextView
                android:id="@+id/tvProfileFollowingCount"
                android:gravity="center"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="675\nFOLLOWING" />

        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+id/lvProfileTimeline"
        style="@style/RegularText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
